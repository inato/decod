{
  "name": "decod",
  "version": "6.1.5",
  "description": "Decode unknwon typescript values",
  "main": "umd/index.js",
  "types": "umd/index.d.ts",
  "module": "esm/index.js",
  "scripts": {
    "test": "jest src",
    "lint": "tslint --project tsconfig.umd.json",
    "build": "npm run build:umd && npm run build:esm",
    "build:umd": "tsc -b tsconfig.umd.json",
    "build:esm": "tsc -b tsconfig.esm.json",
    "clean": "rimraf lib",
    "docs:generate": "typedoc --out docs --tsconfig ./tsconfig.esm.json --ignoreCompilerErrors --exclude \"**/*.test.ts,**/index.ts\"",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inato/decod.git"
  },
  "keywords": [
    "Typescript",
    "safe",
    "decode",
    "unknown",
    "values"
  ],
  "author": "Jordan Van Walleghem <j.vanwall@gmail.com>",
  "contributors": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inato/decod/issues"
  },
  "homepage": "https://github.com/inato/decod#readme",
  "devDependencies": {
    "@types/jest": "^24.0.21",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.4"
  },
  "sideEffects": false
}
